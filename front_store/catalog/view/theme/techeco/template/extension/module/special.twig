<div class="bestsell">
<h3 class="heading">{{ heading_title }}</h3>

{% set temp = 0 %}
{% set setCol = 2 %}
<div class="row">
  <div id="special" class="owl-theme owl-carousel">

 {% for product in products %}
        {% set temp = temp + 1 %}

        {% if temp % setCol == 1 %}
            <div class="multi-row">
        {% endif %}
<!-- writ code Here -->
  <div class="lproduct-layout col-xs-12">
    <div class="product-thumb">
      <div class="image col-sm-3 col-xs-4"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive center-block" /></a>
            <!-- Webiarch Images Start -->
              {% set t = 0 %}
                {% for webi_image in product.webi_images %}
                {% if t == 0 %}
                 <a href="{{ product.href }}"><img src="{{ webi_image.popup }}" class="img-responsive second-img" alt="hover image"/></a>
                {% set t = t + 1 %}
                {% endif %}
              {% endfor %}
      <!-- Webiarch Images End -->
       <!--  {% if product.price %}
          {% if product.special %}
               <h3 class="sale">sale</h3>
          {% endif %}
      {% endif %} -->
      </div>
     <div class="caption col-sm-9 col-xs-8">
        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
        <p>{{ product.description }}</p>

         {% if product.price %}
        <div class="price pull-left">
          {% if not product.special %}
          {{ product.price }}
          {% else %}
          <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
          {% endif %}
         {#  {% if product.tax %}
          <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
          {% endif %} #}
        </div>
        {% endif %}
        {# <p>{{ product.description }}</p> #}
        {% if product.rating %}
          <div class="rating text-right">
            {% for i in 1..5 %}
            {% if product.rating < i %}
            <span class="fa fa-stack">
              <i class="fa fa-star-o fa-stack-2x"></i>
            </span>
            {% else %}
            <span class="fa fa-stack">
              <i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i>
            </span>
            {% endif %}
          {% endfor %}</div>{% else %}
          <div class="rating text-right">{% for i in 1..5 %}
          <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endfor %}</div>
        {% endif %}
       
      </div>
    </div>
  </div>
<!-- writ code Here End -->
 {% if temp % setCol == 0 %}
            </div>
        {% endif %}

  {% endfor %}

  {% if products|length % setCol != 0 %}
    <!-- <h1>hii</h1> -->
        </div>
    {% endif %}

  </div></div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
    $("#special").owlCarousel({
    itemsCustom : [
    [0, 1],
    [600, 2],
    [768, 1],
    [992, 2],
    [1200, 2],
    [1590, 3]
    ],
      // autoPlay: 1000,
      navigationText: ['<i class="fa fa-angle-left" aria-hidden="true"></i>', '<i class="fa fa-angle-right" aria-hidden="true"></i>'],
      navigation : true,
      pagination:false
    });
    });
</script>