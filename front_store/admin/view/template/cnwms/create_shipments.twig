{{ header }}{{ column_left }}
<div id="content">
<div class="page-header">
  
  <div class="container-fluid">
    <div class="pull-right">
    <h1>Create Shipments</h1>
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
  
<div class="container-fluid">
  <div class="row">
    <div id="filter-order">
      <div class="panel panel-default">
		  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-marketing">

        <h3 class="panel-title"><i class="fa fa-filter"></i> Create Shipment</h3>
        <div class="panel-body">
        <div class="panel-heading">
          
        </div>
          <div class="well">
          <div class="row">
          <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="input-order-id">Shipment From</label>
            <select name="shipments_from" class="form-control">
              <option value=""></option>
              {% for wh in orders %}
              <option value="{{ wh.id }}">{{ wh.warehouse }}</option>
              {% endfor %}
            </select>
          </div>
          </div>
          
          <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="input-order-status">Shipment To</label>
            <select name="shipments_to" id="input-order-status" class="form-control">
              <option value=""></option>
              {% for wh in orders %}
              <option value="{{ wh.id }}">{{ wh.warehouse }}</option>
              {% endfor %}
            </select>
          </div>
          </div>
          <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="input-order-sites">Total Items In Box</label>
            <input type="text" name="no_of_items" value="" placeholder="Total Items In Box" id="input-order-id" class="form-control" />
          </div>
          </div>
         
          </div>
	   
          
          <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="input-order-sites">Total Weight</label>
            <input type="text" name="total_weight" value="" placeholder="Total Weight" id="input-order-id" class="form-control" />
          </div>
          </div>
          
          <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="input-order-sites">Total Shipment Value</label>
            <input type="text" name="total_value" value="" placeholder="Total Shipment Value" id="input-order-id" class="form-control" />
          </div>
          </div>
          
          <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="input-order-sites">Special Instruction</label>
            <input type="text" name="instruction" value="" placeholder="Special Instruction" id="input-order-id" class="form-control" />
          </div>
          </div>
          
          
          <div class="form-group text-right">
            <button type="submit" class="btn btn-default"> Create Shipment</button>
          </div>
          </div>
          </div>
        </div>
      </div>
    </div>
    </form>
</div>
  </div>
  </div>
{{ footer }} 
