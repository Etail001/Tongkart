{{ header }}
<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Tongkart Dashboard</title>

        <!-- Bootstrap Core CSS -->
        <link href="../css/bootstrap.min.css" rel="stylesheet">

        <!-- MetisMenu CSS -->
        <link href="../css/metisMenu.min.css" rel="stylesheet">

        <!-- Timeline CSS -->
        <link href="../css/timeline.css" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="../css/startmin.css" rel="stylesheet">

        <!-- Morris Charts CSS -->
        <link href="../css/morris.css" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="../css/font-awesome.min.css" rel="stylesheet" type="text/css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>

        <div id="wrapper navbar navbar-inverse navbar-fixed-top">
            <!-- Navigation -->
                
                <!-- /.navbar-top-links -->

                {{ common }}

            <div id="page-wrapper" style="min-height: 500px !important;" >
                <div class="container-fluid">
                {% if error_warning %}
                    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                      <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                    {% endif %}
                    {% if success %}
                    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                      <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                    {% endif %}
                </div>
                <div class="panel-heading">
                    <h3 class="panel-title" style="text-align: center;margin-bottom: 42px;font-size: 24px;font-weight: 600;"> {{ text_form }}</h3>
                  </div>
                  
                <div class="container-fluid">
                    <div class="row">
                        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-connection" class="form-horizontal">
                            <div class="tab-content">
                                <div class="form-group">
                                <label class="col-sm-4 control-label" for="input-meta-title">Category</label>
                                <div class="col-sm-4">
                                  <select name="category" id="data-show" class="form-control">
                                        {% for category in categories %}
                                        {% if category.category_id == selected_category %}
                                        <option value="{{ category.category_id }}" selected="selected">{{ category.name }}</option>
                                        {% else %}
                                            <option value="{{ category.category_id }}">{{ category.name }}</option>
                                        {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                              </div>
                                <div class="form-group"> 
                                <label class="col-sm-4 control-label" for="input-meta-title">{{ entry_meta_title }}</label>
                                <div class="col-sm-4">
                                  <select name="sp" id="data-show" class="form-control">
                                        {% if sp == 10 %}
                                        <option value="10" selected="selected">10%</option>
                                        {% else %}
                                            <option value="10">10%</option>
                                        {% endif %}
                                        {% if sp == 15 %}
                                        <option value="15" selected="selected">15%</option>
                                        {% else %}
                                            <option value="15">15%</option>
                                        {% endif %}
                                        {% if sp == 20 %}
                                        <option value="20" selected="selected">20%</option>
                                        {% else %}
                                            <option value="20">20%</option>
                                        {% endif %}
                                        {% if sp == 25 %}
                                        <option value="25" selected="selected">25%</option>
                                        {% else %}
                                            <option value="25">25%</option>
                                        {% endif %}
                                        {% if sp == 30 %}
                                        <option value="30" selected="selected">30%</option>
                                        {% else %}
                                            <option value="30">30%</option>
                                        {% endif %}
                                        {% if sp == 35 %}
                                        <option value="35" selected="selected">35%</option>
                                        {% else %}
                                            <option value="35">35%</option>
                                        {% endif %}
                                        {% if sp == 40 %}
                                        <option value="40" selected="selected">40%</option>
                                        {% else %}
                                            <option value="40">40%</option>
                                        {% endif %}
                                        {% if sp == 45 %}
                                        <option value="45" selected="selected">45%</option>
                                        {% else %}
                                            <option value="45">45%</option>
                                        {% endif %}
                                        {% if sp == 50 %}
                                        <option value="50" selected="selected">50%</option>
                                        {% else %}
                                            <option value="50">50%</option>
                                        {% endif %}
                                        {% if sp == 55 %}
                                        <option value="55" selected="selected">55%</option>
                                        {% else %}
                                            <option value="55">55%</option>
                                        {% endif %}
                                        {% if sp == 60 %}
                                        <option value="60" selected="selected">60%</option>
                                        {% else %}
                                            <option value="60">60%</option>
                                        {% endif %}
                                        {% if sp == 65 %}
                                        <option value="65" selected="selected">65%</option>
                                        {% else %}
                                            <option value="65">65%</option>
                                        {% endif %}
                                        {% if sp == 70 %}
                                        <option value="70" selected="selected">70%</option>
                                        {% else %}
                                            <option value="70">70%</option>
                                        {% endif %}
                                        {% if sp == 80 %}
                                        <option value="80" selected="selected">80%</option>
                                        {% else %}
                                            <option value="80">80%</option>
                                        {% endif %}
                                        {% if sp == 90 %}
                                        <option value="90" selected="selected">90%</option>
                                        {% else %}
                                            <option value="90">90%</option>
                                        {% endif %}
                                        {% if sp == 100 %}
                                        <option value="100" selected="selected">100%</option>
                                        {% else %}
                                            <option value="100">100%</option>
                                        {% endif %}
                                    </select>
                                </div>
                              </div>
                                <div class="form-group">
                                <label class="col-sm-4 control-label" for="input-meta-title-token">{{ entry_meta_title_token }}</label>
                                <div class="col-sm-4">
                                  <select name="mrp" id="data-show" class="form-control">
                                        {% if mrp == 1.2 %}
                                        <option value="1.2" selected="selected">1.2</option>
                                        {% else %}
                                            <option value="1.2">1.2</option>
                                        {% endif %}
                                        {% if mrp == 1.5 %}
                                        <option value="1.5" selected="selected">1.5</option>
                                        {% else %}
                                            <option value="1.5">1.5</option>
                                        {% endif %}
                                        {% if mrp == 1.8 %}
                                        <option value="1.8" selected="selected">1.8</option>
                                        {% else %}
                                            <option value="1.8">1.8</option>
                                        {% endif %}
                                        {% if mrp == 2 %}
                                        <option value="2" selected="selected">2.0</option>
                                        {% else %}
                                            <option value="2">2.0</option>
                                        {% endif %}
                                    </select>
                                </div>
                              </div>
                                    <div class="form-group">
                                <label class="col-sm-4 control-label" for="input-meta-title-token">{{ entry_minimum }}</label>
                                <div class="col-sm-4">
                                  <select name="mirp" id="data-show" class="form-control">
                                        {% if mirp == 0 %}
                                        <option value="0" selected="selected">0%</option>
                                        {% else %}
                                            <option value="0">0%</option>
                                        {% endif %}
                                        {% if mirp == 10 %}
                                        <option value="10" selected="selected">10%</option>
                                        {% else %}
                                            <option value="10">10%</option>
                                        {% endif %}
                                        {% if mirp == 15 %}
                                        <option value="15" selected="selected">15%</option>
                                        {% else %}
                                            <option value="15">15%</option>
                                        {% endif %}
                                        {% if mirp == 20 %}
                                        <option value="20" selected="selected">20%</option>
                                        {% else %}
                                            <option value="20">20%</option>
                                        {% endif %}
                                    </select>
                                </div>
                              </div>
                            </div>
                        </form>
                        <div class ="" style="text-align: center;">
                            <input type="submit" form="form-connection" value="Save" class="btn btn-primary" style="padding: 6px 60px;">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 40px;">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Category</th>
                                                    <th>Selling Price</th>
                                                    <th>Maximum Price</th>
                                                    <th>Minimum Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% if prices %}
                                                    
                                                    {% for price in prices %}
                                                        <tr>
                                                        <td>{{ price.price_id }}</td>
                                                        <td>{{ price.name }}</td>
                                                        <td> TongKart Price +{{ price.sp }}%</td>
                                                        <td> Selling Price x {{ price.mrp }}</td>
                                                        <td>TongKart Price + {{ price.mirp }}%</td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <div class="col-sm-6 col-xs-6 text-left">{{ pagination }}</div>
                            <div class="col-sm-6 col-xs-6 text-right tot">{{ results }}</div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                </div>
            </div>

        </div>

        <!-- jQuery -->
        <script src="../js/jquery.min.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="../js/bootstrap.min.js"></script>

        <!-- Metis Menu Plugin JavaScript -->
        <script src="../js/metisMenu.min.js"></script>

        <!-- Morris Charts JavaScript -->
        <script src="../js/raphael.min.js"></script>
        <script src="../js/morris.min.js"></script>
        <script src="../js/morris-data.js"></script>

        <!-- Custom Theme JavaScript -->
        <script src="../js/startmin.js"></script>

    </body>
</html>
<style>
    .navbar-inverse{
        background:none;
    }
    .marketplace-text span {
        color: #ff5c00;
    }
</style>
<script type="text/javascript">
    $('#catalog').bind('click',function(){
        window.location = $('#catalog').attr('href');
    });
</script>
