{{ header }}
<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Tongkart Dashboard</title>

        <!-- Bootstrap Core CSS -->
        <link href="../css/bootstrap.min.css" rel="stylesheet">

        <!-- MetisMenu CSS -->
        <link href="../css/metisMenu.min.css" rel="stylesheet">

        <!-- Timeline CSS -->
        <link href="../css/timeline.css" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="../css/startmin.css" rel="stylesheet">

        <!-- Morris Charts CSS -->
        <link href="../css/morris.css" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="../css/font-awesome.min.css" rel="stylesheet" type="text/css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>

        <div id="wrapper navbar navbar-inverse navbar-fixed-top">
            <!-- Navigation -->
                
                <!-- /.navbar-top-links -->

                {{ common }}

            <div id="page-wrapper" style="min-height: 300px !important;" >
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12" style="text-align: center;" >
                            <h1 class="page-header">Dashboard</h1>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-9">
                            <div class="panel panel-payment" style="margin-bottom: 0px;">
                                <div class="panel-heading" style="min-height: 145px;">
                                    <div class="row" style="margin-top: 17%;">
                                        <div style ="text-align: center;font-size: 30px;" >Hi,{{ account_details.firstname }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="clear"></div>
                            <div style="border-bottom: 1px solid gainsboro;border-right: 1px solid gainsboro;border-left: 1px solid gainsboro;min-height: 130px;border-radius: 4px;">
                                <div class="account-details">
                                        <ul>
                                                <li><span>E-mail</span><i>{{ account_details.email }}</i></li>
                                                <li><span>Phone</span><i>{{ account_details.telephone }}</i></li>
                                                <li><span>Company</span><i>{{ account_details.company }}</i></li>
                                                <li><span>GSTIN Code</span><i>{{ account_details.gstin }}</i></li>
                                        </ul>
                                </div>
                            </div>
                        </div>
                            <div class="col-lg-3 col-md-9">
                            <div class="panel panel-payment">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div style ="text-align: center;" >Your E-Wallet Balance</div>
                                        <div class="col-xs-9 text-right">
                                            <div class="huge">{{ total_amount }}</div>
                                            <div>
                                                <a id ="recharge" class="recharge">Recharge</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-lg-12" >
                            <h1 class="page-header">Orders</h1>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <div class="row">
                        <div class="col-sm-3 col-md-2">
                            <div class="panel panel-lblue">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-8 text-right">
                                            <div class="huge">{{ total_order }}</div>
                                            <div>All Orders</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-2">
                            <div class="panel panel-syellow">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-8 text-right">
                                            <div class="huge">{{ pending_order }}</div>
                                            <div>Pending</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-2">
                            <div class="panel panel-green">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-8 text-right">
                                            <div class="huge">{{ shipped_order }}</div>
                                            <div>Shipped</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-2">
                            <div class="panel panel-red">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-8 text-right">
                                            <div class="huge">{{ cancel_order }}</div>
                                            <div>Cancelled</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <!-- /.row -->
                    <!-- /.row -->
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /#page-wrapper -->

        </div>
        <!-- /#wrapper -->

        <!-- jQuery -->
        <script src="../js/jquery.min.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="../js/bootstrap.min.js"></script>

        <!-- Metis Menu Plugin JavaScript -->
        <script src="../js/metisMenu.min.js"></script>

        <!-- Morris Charts JavaScript -->
        <script src="../js/raphael.min.js"></script>
        <script src="../js/morris.min.js"></script>
        <script src="../js/morris-data.js"></script>

        <!-- Custom Theme JavaScript -->
        <script src="../js/startmin.js"></script>

    </body>
</html>
<style>
    .navbar-inverse{
        background:none;
    }
    
    .panel-lblue>.panel-heading {
        color: #fff;
        background-color: #49e1e3;
        border-color: #49e1e3;
    }
    .panel-lblue{
        border-color: #49e1e3;
    }
    .panel-syellow>.panel-heading {
        color: #fff;
        background-color: #d3de2e;
        border-color: #d3de2e;
    }
    .panel-syellow{
        border-color: #d3de2e;
    }
    .panel-payment>.panel-heading {
        color: #fff;
        background-color: #54bbeb;
        border-color: #54bbeb;
    }
    .panel-payment{
        border-color: #54bbeb;
    }
    .recharge{
        display: inline-block;
    width: 73px;
    height: 36px;
    margin-bottom: 10px;
    background: #fff;
    border-radius: 4px;
    font-size: 14px;
    color: #0ba4db;
    text-align: center;
    line-height: 36px;
    box-shadow: 0px 1px 1px #17c7e5;
    transition: 0.1s;
    }
    .account-details {
        padding: 20px;
        min-height: 130px;
        background-color: #f9f9f9;
    }
    ol, ul, li {
    list-style: none;
    }
    li{
        margin-top: 8px;
        min-height: 15px;
    }
    .account-details ul li span {
        display: inline-block;
        float: left;
    }
    .account-details ul li i {
        display: inline-block;
        float: right;
        font-style: normal;
    }
    .account-details ul {
    clear: both;
    margin-top: 10px;
    font-size: 14px;
}
</style>
<script type="text/javascript">
    $('#catalog').bind('click',function(){
        window.location = $('#catalog').attr('href');
    });
    $('#recharge').bind('click',function(){
        alert('Payment Gateway is under development.....');
    });
</script>