{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
          <table class="table">
              <tbody><tr>
                      <td class="text-left">
                          <strong>Ticket Status :</strong>						
                      </td>
                      <td>
                          {% if status == 1 %}
                              <span class="count label label-danger">Open</span>
                          {% else %}
                              <span class="count label label-success">Closed</span>
                          {% endif %}
                          
                      </td>
                      <td class="text-left">
                          <strong>Reason:</strong>
                      </td>
                      <td>
                          {{ reason }}                                        </td>
                  </tr>
              </tbody>
          </table>
          {% if product_enquiry_info %}
          <div class="tab-content">
              <div class="row">
                <div class="col-sm-12">
                  <div class="tab-content">
                      <div class="widget">
                          <div class="widget-body">
                              {% for details in product_enquiry_info %}
                              <div style="box-shadow: 4px 4px 4px rgb(230, 223, 221);{% if details.user_id == 0 %} margin-right:40%;{% else %} margin-left:40%; {% endif %}" class="widget widget-4 widget-messages">
                                     <ul>
                                      <li style="{% if details.user_id == 0 %} background-color:#E6E3E3;{% else %} background-color:#FCF9B4; {% endif %}">
                                          <span class="meta glyphicons user single"><i></i> {{ details.user }}<span>{{ details.date }},{{ details.time }}</span></span>
                                          <p style="padding: 1% 0% 1% 3%;">{{ details.description }}</p>
                                          <p></p>

                                      </li>


                                  </ul>

                              </div>
                              {% endfor %}

                          </div>
                      </div>
                  </div>
                </div>
              </div>
          </div>
                             
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-customer" class="form-horizontal">
            <table class="form">
                <tbody><tr>
                        <td class="name">
                            <span>Post Reply :</span><i class="icon-question-sign" data-toggle="tooltip" data-placement="top" data-original-title="Post Reply to this ticket mail will be sent to client."></i>
                        </td>
                        <td>
                            <textarea class="autoExpand" data-min-rows="6" rows="6" cols="100" name="postreplymessage" id="idPostMessage" style="width:100%;color:black !important;"></textarea>

                        </td>
                    </tr>
                    <tr>
                        <td class="name">
                            <span>Ticket Status :</span><i class="icon-question-sign" data-toggle="tooltip" data-placement="top" data-original-title="Ticket status can be change as per response."></i>
                        </td>
                        <td>
                            <input type="hidden" name="enquiry_id" value="{{ enquiry_id }}">
                            <select name="post_reply_status" class="form-control">
                                <option value="1">Open</option>
                                <option value="0">Close Ticket</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="name"></td>
                        <td>
                            <input type="submit" class="btn" data-clipboard-action="copy" data-clipboard-target="#idPostMessage" name="postreply" id="postreplybtn" value="Post Reply">
                        </td>
                    </tr>
                </tbody></table>
        </form>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{{ footer }} 
<style type ="text/css" >
    .widget {
    background: #fff;
    margin: 0 auto 10px;
    position: relative;
    border: 1px solid #e5e5e5;
}
.widget .widget-body {
    padding: 10px;
}
.widget-messages ul {
    margin: 0;
    padding: 0;
    list-style: none;
}
.glyphicons.single, .glyphicons-social.single {
    color: #e04545;
    padding: 0 0 0 20px;
}
.glyphicons {
    display: inline-block;
    position: relative;
    padding-left: 48px;
    color: #1d1d1b;
    text-decoration: none;
    *display: inline;
    *zoom: 1;
    vertical-align: middle;
}
.widget-messages ul li .meta span {
    color: #a3a3a3;
    font-size: 12px;
    margin-left: 42px;
}
table.form {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}
table.form > tbody > tr > td:first-child {
    width: 250px;
}
table.form > tbody > tr > td {
    border-bottom: 1px solid #E5E5E5;
}
table.form > tbody > tr > td {
    padding: 10px;
    color: #000000;
    border-bottom: 1px dotted #CCCCCC;
}
</style>